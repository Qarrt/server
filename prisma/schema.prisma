generator client {
  provider = "prisma-client-js"
}

// generator dbml {
//   provider = "prisma-dbml-generator"
// }

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id    String  @id @default(cuid())
  email String?
  name  String
  image String?

  provider     String
  providerId   String
  refreshToken String?

  pieces Piece[]
  scraps Scrap[]
}

model Piece {
  id          String @id @default(cuid())
  title       String
  description String

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user   User    @relation(fields: [userId], references: [id])
  userId String
  scraps Scrap[]
}

model Scrap {
  userId  String
  pieceId String
  user    User   @relation(fields: [userId], references: [id])
  piece   Piece  @relation(fields: [pieceId], references: [id])

  @@id([userId, pieceId])
}
