generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id    String @id @default(cuid())
  email String
  name  String

  platform     String
  platformId   String
  refreshToken String

  pieces Piece[]
  scraps Scrap[]
}

model Piece {
  id          String @id @default(cuid())
  title       String
  description String

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user   User    @relation(fields: [userId], references: [id])
  userId String
  scraps Scrap[]
}

model Scrap {
  userId  String
  pieceId String
  user    User   @relation(fields: [userId], references: [id])
  piece   Piece  @relation(fields: [pieceId], references: [id])

  @@id([userId, pieceId])
}
